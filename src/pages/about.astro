---
import AboutSection from "@/components/About-section.astro";
import FlyoutBox from "@/components/flyout-box.astro";

import Layout from "../layout/MainLayout.astro";
const aboutStyle = "about grid grid-cols-1 relative pt-20";
const title = "About Page";
const metaDesc =
  "Mengenal Eat Pizza, pelopor pizza persegi panjang di Indonesia. Dengan cita rasa otentik Korea dan konsep bisnis yang menguntungkan, Eat Pizza adalah pilihan tepat bagi para pecinta pizza dan pengusaha kuliner.";
---

<Layout title={title} metaDesc={metaDesc}>
  <!-- Flyout Box -->
  <FlyoutBox/>
  <!-- About Section -->
  <AboutSection aboutStyle={aboutStyle}/>
</Layout>
