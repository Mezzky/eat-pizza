---
const { title, metaDesc } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/globals.css";
import { Toaster } from "@/components/ui/toaster";
---

<!doctype html>
<html lang="en" class="scroll-smooth overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Eat Pizza Indonesia | {title}</title>
    <meta name="description" content={metaDesc} />
    <link rel="icon" href="/eatpizza-favicon.png" type="image/x-icon" />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-16998534830"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'AW-16998534830');
    </script> 
  </head>
  <body class="bg-main scroll-smooth overflow-x-hidden">
    <Header />
    <main>
      <slot>
        <!-- Ini adalah Isi Content -->
      </slot>
      <Toaster client:idle />
    </main>
    <Footer />
  </body>
</html>
